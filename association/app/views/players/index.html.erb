<% content_for(:title, "Index page") %>

<!-- <h1>There are a <%= @players.count %> of players in our league</h1>-->

<h1>Listing <%= pluralize(@players.length, "player")%></h1>

<table>
	<thead>
		<tr>
			<td>First Name</td>
			<td>Last Name</td>
			<td>Actions</td>
		</tr>
	</thead>

	<tbody>
		<% @players.each do|player| %>
		  <tr>
		  	<td><%= player.first_name %></td>
		  	<td><%= player.last_name %></td>
		  	<!--<td><a href="/players/<%= player.id %>">Show Profile</a></td>-->
		  	<td><%= link_to "Show Profile", player_path(player.id) %></td>
		  	<!-- <td><a href="/players/<%= player.id %>/edit">Edit Profile</a></td>-->
		  	<td><%= link_to "Edit Profile", player_edit_path(player.id) %></td>
		  	<!-- <td><a href="/players/<%= player.id %>" data-method="delete" data-confirm="Are you sure?">Delete Profile</a></td>-->
		  	<td><%= link_to "Delete Profile", player_path(player.id), data: {method: :delete, confirm: "Are you sure?"} %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<!-- <a href="/players/new">New Player</a> -->

<%= link_to "New Player", players_new_path %>